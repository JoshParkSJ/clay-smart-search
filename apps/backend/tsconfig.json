{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["es2018", "esnext.asynciterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@clay-smart-search/shared": ["../../shared/dist"]
    },
    "incremental": true,
    "isolatedModules": true,
    "allowJs": true
  },
  "include": ["api/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", ".vercel"],
  "references": [
    {
      "path": "../../shared"
    }
  ]
} 